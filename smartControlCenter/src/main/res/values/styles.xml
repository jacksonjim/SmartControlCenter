<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">

        <!--<item name="android:textColorPrimary">@color/textColorPrimary</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--toolbar标题文字颜色-->
        <!--<item name="android:textColorPrimary">@android:color/black</item>-->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:listDivider">@drawable/divider</item>
        <!--<item name="android:textColorSecondary">@android:color/white</item>-->
        <item name="textColorError">@color/textColorError</item>

       <!-- transitions  -->
        <item name="android:windowExitAnimation">@transition/slide</item>
        <item name="android:windowEnterAnimation">@transition/slide</item>
        <item name="android:windowReenterTransition" tools:targetApi="lollipop">@transition/slide</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <!-- 使用 API Level 22 編譯的話，要拿掉前綴字 -->
        <item name="windowNoTitle">true</item>
        <!--<item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>-->
        <!--<del><item name="android:windowNoTitle">true</item></del>-->
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <!--<item name="android:textColorSecondary">@android:color/white</item>-->
        <!-- <item name="actionMenuTextAppearance">@style/ToolbarMenuTextSize</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="sign_in_style">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:centerColor">#00ccFF</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@animator/fade_in</item>
        <item name="android:windowExitAnimation">@animator/fade_out</item>
    </style>

</resources>

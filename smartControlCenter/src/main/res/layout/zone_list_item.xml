<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zone_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="60dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/zone_list_icon"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:minWidth="42dp"
        android:minHeight="42dp"
        android:background="@color/colorPrimaryDark"
        android:foregroundGravity="center_vertical"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/zone_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical|start"
        android:layout_marginLeft="10dp"
        android:layout_weight="5"
        android:lines="1"
        android:text="TextView"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/zone_item_name" />

    <ImageView
        android:id="@+id/equip_status_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/status_online_24dp" />
</LinearLayout>
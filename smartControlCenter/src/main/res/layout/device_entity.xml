<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/device_type_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="42dp"
        android:maxWidth="42dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/icon3" />

    <TextView
        android:id="@+id/device_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/device_type_icon"
        android:layout_centerInParent="true"
        android:text="TextView" />

    <ImageView
        android:id="@+id/device_type_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:maxWidth="42dp"
        android:minWidth="36dp"
        app:srcCompat="@drawable/ic_chevron_right_while_24dp" />

    <Switch
        android:id="@+id/device_switch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/device_type_more"
        android:layout_toStartOf="@+id/device_type_more" />

</RelativeLayout>
